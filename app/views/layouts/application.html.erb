<!DOCTYPE html>
<html>
  <head>
    <title>QuizOff</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%= link_to 'QuizzOff', root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'Quizzes', quizzes_path, class: "nav-link" %>
            </li>
          </ul>
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Hello <strong><%= current_user.first_name %></strong>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <%= link_to 'Edit Profile', edit_user_path(current_user), class: 'dropdown-item'%>
                </div>
              </li>
              <li class="nav-item">
                <%= link_to 'Leaderboard', leaderboard_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Dashboard', dashboard_user_path(current_user), class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign Out", session_path, method: :delete, data: {confirm: "Are you sure you want to log out?"}, class: "nav-link text-warning" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Sign In', new_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Up', new_user_path, class: "nav-link" %>
              </li>
           </ul>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>


      <div class="container d-flex justify-content-center mt-2">
        <% flash.each do |type, message| %>
            <div class="flash-message alert alert-<%= type %> alert-dismissible fade show" data-toggle="collapse">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
              </button>
              <small><%= message %></small>
            </div>
        <% end %>
      </div>
  
      <%= yield %>
      
  </body>
</html>
