
        <div class="row welcome text-center">
		<div class="col-12">
            <h1 class="display-4">Quizzes</h1>
            <button class="btn btn-warning new-quiz-btn"><%= link_to 'Create Quiz', new_quiz_path %></button>
            </div>
		</div>
		<hr>
    <ul>
        <% @quizzes.each do |quiz| %>
            <div class="my-3">
                <div class="card">
                    <div class="card-body card-height">
                        <h4><%= quiz.title %></h4>
                        <p>
                        <%= quiz.description %> 
                        </p>
                        <p>
                            <%= pluralize(quiz.points, "point") %>
                        </p>
                        <small>
                            Created <%= time_ago_in_words(quiz.created_at) %> ago
                        </small>
                        <%= 
                            link_to 'Take Quiz', 
                            attempt_quiz_path(quiz), 
                            method: :post
                        %>
                        <br>
                        <small>
                            <%= link_to "Edit", edit_quiz_path(quiz)%>
                            |
                            <%= link_to "Delete", quiz_path(quiz), method: :delete, data: {confirm: "Are you sure?"}%>
                        </small>
                    </div>
                </div>
            
            </div>

        <% end %>
    </ul>
</div>
