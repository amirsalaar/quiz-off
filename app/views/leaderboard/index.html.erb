
<div class="form-padding">
  <div class="leader-box">
  <div class="total-box">
    <div class="row welcome text-center">
		<div class="col-12">
            <h1 class="display-4">Leaderboard<i class="fa fa-users" aria-hidden="true"></i></h1>

        </div>
	</div>
		<hr>

    <ul>
        <% @users.each do |loopeduser| %>
            <% if loopeduser.role == 2 %>
                <div class="my-3">
                    <div class="card total-card">
                        <div class="card-body card-height">
                            <h4><%= loopeduser.first_name %> <%= loopeduser.last_name %>   <%= pluralize(loopeduser.total_points, "points")%></h4> 
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
    </ul>
    </div>

    <div class="you-box">
    <ul>
        <div class="my-3">
            <div class="card you-card">
                <div class="card-body card-height">
                    <h4>YOU
                    <p>
                        <%= pluralize(@user.total_points, "points") %>
                    </p>
                    </h4>
                </div>
            </div>
        </div>
    </ul>
    </div>
    </div>
 
</div>
